<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <arg name="run_mode" default="online" doc="options: online, planning_simulation"/>

  <group>
    <push-ros-namespace namespace="/system"/>

    <!-- System Monitor -->
    <group>
      <push-ros-namespace namespace="system_monitor"/>
      <include file="$(find system_monitor)/launch/system_monitor.launch">
        <arg name="config_file" value="$(find system_launch)/config/system_monitor.yaml"/>
      </include>
    </group>

    <!-- State Monitor -->
    <include file="$(find-pkg-share autoware_state_monitor)/launch/autoware_state_monitor.launch.xml">
      <arg name="config_file" if="$(eval &quot;'$(var run_mode)'=='online'&quot;)" value="$(find-pkg-share autoware_state_monitor)/config/autoware_state_monitor.yaml" />
      <arg name="config_file" if="$(eval &quot;'$(var run_mode)'=='planning_simulation'&quot;)" value="$(find-pkg-share autoware_state_monitor)/config/autoware_state_monitor.planning_simulation.yaml" />
    </include>

    <!-- Error Monitor -->
    <include file="$(find-pkg-share autoware_error_monitor)/launch/autoware_error_monitor.launch.xml">
      <arg name="config_file" value="$(find-pkg-share autoware_error_monitor)/config/autoware_error_monitor.param.yaml" />

      <arg name="agg_config_file_discard" default="$(find-pkg-share system_launch)/config/diagnostic_aggregator/_discard.yaml" />
      <arg name="agg_config_file_control" default="$(find-pkg-share system_launch)/config/diagnostic_aggregator/control.yaml" />
      <arg name="agg_config_file_localization" default="$(find-pkg-share system_launch)/config/diagnostic_aggregator/localization.yaml" />
      <arg name="agg_config_file_map" default="$(find-pkg-share system_launch)/config/diagnostic_aggregator/map.yaml" />
      <arg name="agg_config_file_perception" default="$(find-pkg-share system_launch)/config/diagnostic_aggregator/perception.yaml" />
      <arg name="agg_config_file_planning" default="$(find-pkg-share system_launch)/config/diagnostic_aggregator/planning.yaml" />
      <arg name="agg_config_file_sensing" default="$(find-pkg-share system_launch)/config/diagnostic_aggregator/sensing.yaml" />
      <arg name="agg_config_file_system" default="$(find-pkg-share system_launch)/config/diagnostic_aggregator/system.yaml" />
      <arg name="agg_config_file_vehicle" default="$(find-pkg-share system_launch)/config/diagnostic_aggregator/vehicle.yaml" />
    </include>

    <!-- Emergency Handler -->
    <include file="$(find-pkg-share emergency_handler)/launch/emergency_handler.launch.xml">
      <arg name="config_file" value="$(find-pkg-share emergency_handler)/config/emergency_handler.param.yaml" />
    </include>
  </group>
</launch>
